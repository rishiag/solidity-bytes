{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Solidity Bytes Exercise Schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "title",
    "difficulty",
    "tags",
    "objectives",
    "description",
    "starter",
    "tests",
    "hints",
    "solution",
    "visibility"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
      "description": "URL-safe slug identifier (kebab-case)"
    },
    "title": { "type": "string", "minLength": 3 },
    "difficulty": {
      "type": "string",
      "enum": ["beginner", "intermediate", "advanced"]
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true,
      "maxItems": 12
    },
    "objectives": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "description": {
      "type": "string",
      "description": "Markdown supporting fenced code blocks"
    },
    "hints": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    },
    "starter": {
      "type": "object",
      "additionalProperties": false,
      "required": ["files"],
      "properties": {
        "files": {
          "type": "array",
          "items": { "$ref": "#/definitions/fileObject" },
          "minItems": 1
        }
      }
    },
    "tests": {
      "type": "object",
      "additionalProperties": false,
      "required": ["files"],
      "properties": {
        "files": {
          "type": "array",
          "items": { "$ref": "#/definitions/fileObject" },
          "minItems": 1
        }
      }
    },
    "solution": {
      "type": "object",
      "additionalProperties": false,
      "required": ["files"],
      "properties": {
        "files": {
          "type": "array",
          "items": { "$ref": "#/definitions/fileObject" },
          "minItems": 1
        }
      }
    },
    "visibility": {
      "type": "string",
      "enum": ["always", "after-pass", "admin-only"],
      "description": "When to reveal the reference solution"
    }
  },
  "definitions": {
    "fileObject": {
      "type": "object",
      "additionalProperties": false,
      "required": ["path", "content"],
      "properties": {
        "path": { "type": "string", "minLength": 1 },
        "content": { "type": "string" }
      }
    }
  }
}

